<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="capston.finalproject.uiothers.RoomInfomation">
    <!-- roomname -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="방 이름"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/roomApplyroomname"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:textSize="20dp" />

    </LinearLayout>
    <!-- 관심분야 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="관심분야"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/roomApplyinteresting"
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:textSize="20dp" />


    </LinearLayout>
    <!-- keyword -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="키워드"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/roomApplykey1"
            android:layout_width="270dp"
            android:layout_height="25dp"
            android:textSize="20dp" />

    </LinearLayout>
    <!-- 방장-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="방장"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/roomApplyroommaster"
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:textSize="20dp" />

    </LinearLayout>
    <!-- area for activity -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="활동지역"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/roomApplyarea"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:textSize="20dp" />

    </LinearLayout>
    <!-- people state -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="현재인원"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/roomApplypeostate"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:textSize="20dp" />
    </LinearLayout>
    <!-- information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="정보"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/roomApplyinformation"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:textSize="20dp"/>
    </LinearLayout>
    <!-- join application-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/roomApplybtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="신청"
            android:background="@drawable/listbtn"/>

    </LinearLayout>
</LinearLayout>