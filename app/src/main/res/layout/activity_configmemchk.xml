<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF">

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/CheckQuestion"
        android:prompt="@string/question"
        android:background="#14C1C7"
        android:popupBackground="#14C1C7"/>
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/CheckAnswer"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/checkyoubtn"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="확인"
            android:background="@drawable/listbtn"/>
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/checknobtn"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="취소"
            android:background="@drawable/listbtn"/>
    </LinearLayout>
</LinearLayout>
