<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/listitem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/listitemCategory"
                android:layout_width="100dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/listitemName"
                android:layout_width="130dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/listitemMember"
                android:layout_width="70dp"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/listitemLocate"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/listitemKeyword"
                android:layout_width="180dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:padding="5dp"
        android:id="@+id/reqStatus"
        android:layout_width="85dp"
        android:layout_height="80dp" />
</LinearLayout>
