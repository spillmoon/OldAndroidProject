<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="capston.finalproject.uiboard.BoardContentEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="글 제목"
            android:textSize="20sp"
            android:background="#FFFFFF"/>
        <EditText
            android:id="@+id/boardedittitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="폴더"
            android:textSize="20sp"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/boardeditfolder"
            android:layout_width="100dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp">
        <Button
            android:id="@+id/boardeditfile"
            android:layout_width="92dp"
            android:layout_height="40dp"
            android:text="첨부파일"
            android:background="@drawable/listbtn"/>
        <TextView
            android:id="@+id/boardeditfilename"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/boardeditreset"
            android:layout_width="92dp"
            android:layout_height="40dp"
            android:text="파일삭제"
            android:background="@drawable/listbtn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="내용"
            android:textSize="20sp"
            android:background="#FFFFFF"/>
        <EditText
            android:layout_marginRight="5dp"
            android:id="@+id/boardeditcontent"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/inin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/boardedittoserver"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="수정"
            android:background="@drawable/listbtn"/>
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/boardeditcancel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="취소"
            android:background="@drawable/listbtn"/>
    </LinearLayout>
</LinearLayout>
