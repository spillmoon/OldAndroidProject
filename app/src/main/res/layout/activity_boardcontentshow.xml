<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="capston.finalproject.uiothers.BoardShowContent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:text="폴더"
            android:textSize="20sp"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/boardshowfolder"
            android:layout_width="70dp"
            android:layout_height="40dp" />
        <TextView
            android:gravity="center"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:text="제목"
            android:textSize="20sp"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/boardshowtitle"
            android:layout_width="165dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:text="작성자"
            android:textSize="20sp"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/boardshowauthor"
            android:layout_width="70dp"
            android:layout_height="40dp" />
        <TextView
            android:gravity="center"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:text="작성일"
            android:textSize="20sp"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/boardshowdate"
            android:layout_width="165dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="첨부파일"
            android:textSize="20sp"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/boardshowattachfile"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/boardshowdown"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="down"
            android:background="@drawable/listbtn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="내용"
            android:textSize="20sp"
            android:background="#FFFFFF"/>
        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/boardshowcontent"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/inin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/boardreply"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/listbtn"
            android:text="댓글"/>
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/boardcontentedit"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/listbtn"
            android:text="수정"/>
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/boardcontentdelete"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/listbtn"
            android:text="삭제"/>
    </LinearLayout>
</LinearLayout>
