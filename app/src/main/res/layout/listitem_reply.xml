<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/ansMem"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/ansContent"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/ansDate"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/arcName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"/>
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/replyattachdown"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="down"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/replyedit"
            android:background="@drawable/listbtn"/>
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/replyedit"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="수정"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/replydelete"
            android:background="@drawable/listbtn"/>
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/replydelete"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="삭제"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/listbtn"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="댓글"
            android:id="@+id/rereply"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/replyattachdown"
            android:background="@drawable/listbtn"/>
    </RelativeLayout>
</LinearLayout>
